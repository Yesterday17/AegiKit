{
  "name": "aegikit",
  "displayName": "AegiKit",
  "description": "Aegisub toolkit for VSCode.",
  "license": "MIT",
  "version": "1.0.0",
  "repository": "https://github.com/Yesterday17/AegiKit",
  "publisher": "yesterday17",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:karatmpl",
    "onLanguage:lua",
    "onCommand:aegikit.minifyLua"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aegikit.minifyLua",
        "title": "Minify Lua code"
      }
    ],
    "configurationDefaults": {
      "[karatmpl]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": false
      }
    },
    "languages": [
      {
        "id": "karatmpl",
        "extensions": [
          ".karaoke-template",
          ".karatmpl"
        ],
        "configuration": "./language/karaoke-template.configuration.json"
      },
      {
        "id": "lua",
        "extensions": [
          ".karacode"
        ]
      },
      {
        "id": "ass",
        "extensions": [
          ".ass"
        ],
        "configuration": "./language/ass.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "karatmpl",
        "scopeName": "source.karatmpl",
        "path": "./language/karaoke-template.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.lua": "lua"
        }
      },
      {
        "language": "ass",
        "scopeName": "source.ass",
        "path": "./language/ass.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embeded.block.karatmpl": "karatmpl",
          "meta.embeded.block.karacode": "lua"
        }
      }
    ],
    "snippets": [
      {
        "language": "karatmpl",
        "path": "./snippets/inline-variable.karatmpl.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint"
  },
  "devDependencies": {
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "lua-fmt": "^2.6.0",
    "luamin": "^1.0.4"
  }
}
